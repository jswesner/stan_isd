@article{edwards2020,
  title = {Accounting for the Bin Structure of Data Removes Bias When Fitting Size Spectra},
  author = {Edwards, Andrew M. and Robinson, James P. W. and Blanchard, Julia L. and Baum, Julia K. and Plank, Michael J.},
