  author = {Nelson, Daniel and Benstead, Jonathan P. and Huryn, Alexander D. and Cross, Wyatt F. and Hood, James M. and Johnson, Philip W. and Junker, James R. and G{\'i}slason, G{\'i}sli M. and {\'O}lafsson, J{\'o}n S.},
